<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:layout_gravity="center"
    android:id="@+id/programDetailsScrollView">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/titleWV"
        />

    <com.abheri.sunaad.view.ProportionalImageView
        android:id="@+id/programImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/programDetailsWV"
        />


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:columnCount="1">

        <TextView
            android:id="@+id/onText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="on"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:id="@+id/atText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="at"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="Place"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:id="@+id/addressLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="Line1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="4"
            android:layout_column="0" />
        <TextView
            android:id="@+id/addressLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="Line2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="5"
            android:layout_column="0" />
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="City"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="6"
            android:layout_column="0" />
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="State"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="7"
            android:layout_column="0" />
        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:textSize="@dimen/prg_detail_text"
            android:text="Pincode"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="8"
            android:layout_column="0" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:id="@+id/mapImage"
            android:layout_row="10"
            android:layout_column="0" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="12"
            android:layout_column="0" />


    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:columnCount="4">

        <TextView
            android:id="@+id/parkingYN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/prg_detail_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="16"
            android:text="Parking"
            android:layout_column="0" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginRight="30dp"
            android:id="@+id/parkingImage"
            android:layout_column="1" />


        <TextView
            android:id="@+id/eateriesYN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/prg_detail_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Eataries"
            android:layout_column="2" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:id="@+id/eateriesImage"
            android:layout_column="3" />

    </GridLayout>


</LinearLayout>
</ScrollView>
